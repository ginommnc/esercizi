
#include <stdio.h>
#include <stdlib.h>

int prime(int n){
  for (int i=2; i<=n; i++){
    if (n%i==0){
    return 0;
    }
    else{
      return 1;
    }
  }
}

int main () {
  printf("%s","inserire numero intero:");
  int a;
  scanf ("%d", &a);
  if (prime (a)){
    printf("%d=numero primo\n",a);
  }
    else{
      printf("%d=numero non primo\n",a);
    }
}
